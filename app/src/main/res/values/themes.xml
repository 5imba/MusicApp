<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MusicApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MusicApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MusicApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAlbumArtList" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/artwork_round</item>
    </style>

    <style name="TextAppearance.MainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.SongTitle" parent="TextAppearance.MainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/song_title_size</item>
    </style>

    <style name="TextAppearance.SongDescription" parent="TextAppearance.MainText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/song_description_size</item>
    </style>

    <style name="TextAppearance.TabText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="ImageButton.Main" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">@color/dark_gray</item>
        <item name="android:scaleType">centerInside</item>
    </style>



</resources>